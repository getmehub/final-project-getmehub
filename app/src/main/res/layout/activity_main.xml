<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
         tools:context="com.mm.witty.Model.MainActivity"
>
        <TextView
            android:layout_width="399dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_height="195dp"
            android:textColor="@color/white"
            android:text="Click The Next Joke button To Keep Bring Smile :)"
            android:id="@+id/textView"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/nextjke"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginBottom="36dp"
            android:layout_marginEnd="3dp"
            android:background="@android:color/holo_green_dark"
            android:text="Next Joke"
            app:layout_constraintBottom_toTopOf="@+id/textTOSpeech"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/textTOSpeech"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <Button
            android:id="@+id/textTOSpeech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nextjke"
            android:layout_alignBottom="@+id/nextjke"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="111dp"
            android:background="?android:attr/textColorLink"
            android:text="Text To Speech"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <Button
            android:id="@+id/previousjke"
            android:layout_width="132dp"
            android:layout_height="48dp"
            android:layout_marginEnd="61dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Previous"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nextjke"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />


</android.support.constraint.ConstraintLayout>
